  <body>
    <div class="container">
        <span class="title"><b>Add User</b></span>
        <form action="/addnewuser" class="addUserForm" method="post">
            <div class="input-field">
            <label for="email">Email Id:</label>
            <input type="email" name="userEmail" placeholder="Enter email of new user">
        </div>
        <div class="input-field">
            <label for="userID">User ID:</label>
            <input type="text" name="userId" placeholder="Enter Unique User ID">
        </div>
        <div class="input-field button">
          <input name="post" type="submit" id="addUserBtn" value="Add User">
        </form>
    </div>


